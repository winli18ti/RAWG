<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RAWG" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:windowBackground">@color/black</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black_500</item>
        <item name="colorPrimaryVariant">@color/black_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white_200</item>
        <item name="colorSecondaryVariant">@color/white_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.RAWG.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.RAWG.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.RAWG.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Text">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/segoe_ui</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="Title">
        <item name="android:fontFamily">@font/segoe_ui_black</item>
        <item name="android:textSize">28sp</item>
        <item name="fontWeight">700</item>
        <item name="lineHeight">28.8dp</item>
    </style>

    <style name="Subtitle">
        <item name="android:textSize">18sp</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="Text.Content1">
        <item name="android:fontFamily">@font/segoe_ui_black</item>
        <item name="android:textSize">28sp</item>
        <item name="fontWeight">700</item>
        <item name="lineHeight">28.8dp</item>
    </style>

    <style name="Text.Content2">
        <item name="android:textSize">14sp</item>
        <item name="fontWeight">400</item>
        <item name="lineHeight">14.4dp</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="Text.Content3">
        <item name="android:textColor">@color/black_200</item>
        <item name="android:textSize">18sp</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="Text.Content4">
        <item name="android:textSize">14sp</item>
        <item name="fontWeight">700</item>
        <item name="lineHeight">16.8dp</item>
    </style>

    <style name="Text.Content5">
        <item name="android:textSize">22sp</item>
        <item name="fontWeight">700</item>
    </style>

    <style name="SearchView">
        <item name="android:fontFamily">@font/segoe_ui</item>
        <item name="android:textSize">18sp</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="Message">
        <item name="android:textColor">@color/white_700</item>
        <item name="android:fontFamily">@font/segoe_ui</item>
        <item name="android:textSize">18sp</item>
        <item name="fontWeight">400</item>
    </style>
</resources>